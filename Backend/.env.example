# VGI Bus Booking Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# PostgreSQL database connection details
DB_USERNAME=myuser
DB_PASSWORD=mypassword
JDBC_URL=jdbc:postgresql://localhost:5432/transport_data

# Application Configuration
FRONTEND_URL=http://localhost:3000

# Email addresses for notifications
ADMIN_EMAIL=admin@example.com
CONTROL_CENTER_EMAIL=control@example.com

# Google APIs
# Google Maps API key for geocoding and routing services
# Get your API key from: https://console.cloud.google.com/
# Required APIs: Maps JavaScript API, Geocoding API, Routes API
GOOGLE_API_KEY=your_google_maps_api_key_here

# Email Configuration (SMTP)
# SMTP credentials for sending email notifications
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password

# These are already set in database/docker-compose.yaml
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=transport_data
